<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.history.detail.BreakfastActivity">

    <TextView
        android:id="@+id/label_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/nama_makanan"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_breakfast"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/label_makanan"
        app:layout_constraintStart_toStartOf="@+id/label_makanan"
        tools:listitem="@layout/list_history_makanan"/>

    <TextView
        android:id="@+id/label_karbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="Kb"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/label_makanan"
        app:layout_constraintTop_toTopOf="@id/label_makanan"/>

    <TextView
        android:id="@+id/label_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:text="Pro"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/label_makanan"
        app:layout_constraintTop_toTopOf="@id/label_makanan"/>

    <TextView
        android:id="@+id/label_lemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:text="Lem"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/label_makanan"
        app:layout_constraintTop_toTopOf="@id/label_makanan"/>

    <TextView
        android:id="@+id/label_kalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="231dp"
        android:text="Kal"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/label_makanan"
        app:layout_constraintTop_toTopOf="@id/label_makanan"/>

    <TextView
        android:id="@+id/catatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Catatan: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/rv_breakfast"
        app:layout_constraintTop_toBottomOf="@id/rv_breakfast"/>

    <TextView
        android:id="@+id/karbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kb = Karbohidrat"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/catatan"
        app:layout_constraintTop_toBottomOf="@id/catatan"/>

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pro = Protein"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/karbo"
        app:layout_constraintTop_toBottomOf="@id/karbo"/>

        <TextView
        android:id="@+id/lemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lem = Lemak"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/protein"
        app:layout_constraintTop_toBottomOf="@id/protein"/>

        <TextView
        android:id="@+id/kalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kal = Kalori"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/lemak"
        app:layout_constraintTop_toBottomOf="@id/lemak"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="100"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/kalori"
        app:layout_constraintStart_toStartOf="@+id/kalori"/>

    <TextView
        android:id="@+id/label_total_pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="= 200kkal"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/pi"
        app:layout_constraintTop_toTopOf="@id/pi"/>

</androidx.constraintlayout.widget.ConstraintLayout>